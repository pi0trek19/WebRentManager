@model RentAddRentViewModel

<div class="container">
    <form asp-action="AddRent" asp-controller="Rents" method="post" enctype="multipart/form-data">
        <div class="form-group row">
            <label asp-for="RentType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <label class="form-check-label">
                    <input id="doba" asp-for="RentType" type="radio" value="@RentType.Dobowy">Dobowy
                </label>
                <label class="form-check-label">
                    <input id="miesiac" asp-for="RentType" type="radio" value="@RentType.Miesięczny">Miesięczny
                </label>
                <label class="form-check-label">
                    <input id="wykup" asp-for="RentType" type="radio" value="@RentType.Wykup">Z wykupem
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RentingCompany" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="RentingCompany" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<RentingCompany>()"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ClientId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="ClientId" class="custom-select mr-sm-2"
                        asp-items="@(new SelectList(Model.Clients,"Id","Name"))"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CarId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="CarId" class="custom-select mr-sm-2"
                        asp-items="@(new SelectList(Model.Cars,"Id","RegistrationNumber"))"></select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" placeholder="Użytkownik" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserMail" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserMail" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="UserMail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserPhone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserPhone" class="form-control" placeholder="Telefon" />
                <span asp-validation-for="UserPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ProposedStartDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="date" value="null" asp-for="ProposedStartDate" class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                <span asp-validation-for="ProposedStartDate" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-7">
                <input id="enddate" type="date" value="null" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <label asp-for="IsEndDateSet" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input id="nieokreslony" asp-for="IsEndDateSet" class="form-control" />
                <span asp-validation-for="IsEndDateSet" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RentFee" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RentFee" class="form-control" />
                <span asp-validation-for="RentFee" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DamageFee" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DamageFee" class="form-control" />
                <span asp-validation-for="DamageFee" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="MilageLimit" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="MilageLimit" class="form-control" />
                <span asp-validation-for="MilageLimit" class="text-danger"></span>
            </div>
            <label asp-for="OverMilageFee" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="OverMilageFee" class="form-control" />
                <span asp-validation-for="OverMilageFee" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="TyresIncluded" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="TyresIncluded" class="form-control" />
                <span asp-validation-for="TyresIncluded" class="text-danger"></span>
            </div>
            <label asp-for="ServiceIncluded" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="ServiceIncluded" class="form-control" />
                <span asp-validation-for="ServiceIncluded" class="text-danger"></span>
            </div>
            <label asp-for="AssistanceIncluded" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="AssistanceIncluded" class="form-control" />
                <span asp-validation-for="AssistanceIncluded" class="text-danger"></span>
            </div>
            <label asp-for="ReplacementCarIncluded" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="ReplacementCarIncluded" class="form-control" />
                <span asp-validation-for="ReplacementCarIncluded" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="InitialPayment" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="oplata" asp-for="InitialPayment" class="form-control" />
                <span asp-validation-for="InitialPayment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-row">
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#oplata").prop("disabled", true);
            $().ready(function () {
                $('#nieokreslony').on('change', function () {
                    if ($('#enddate').attr('disabled')) {
                        $('#enddate').removeAttr('disabled');
                    } else {
                        $('#enddate').attr({ 'disabled': 'disabled' });
                    }
                });
            });
            $("#doba").click(function () {
                $("#oplata").prop("disabled", true);
            });
            $("#miesiac").click(function () {
                $("#oplata").prop("disabled", true);
            });
            $("#wykup").click(function () {
                $("#oplata").prop("disabled", false);
            });
        });
    </script>
}
