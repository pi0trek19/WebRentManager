                    <td>@Model.Car.VIN</td>
                </tr>
                <tr>
                    <th class="text-dark" style="text-align:left">Marka</th>
                    <td>@Model.Car.Make</td>
                    <th class="text-dark" style="text-align:left">Poj. skokowa</th>
                    <td>@Model.Car.EngineSize.ToString()</td>
