                                        <tr>
                                            <th>Finansujący</th>
                                            <td>@Model.FinancialInfo.BankName</td>
                                        </tr>
                                        <tr>
                                            <th>Leasingobiorca</th>
                                            <td>@Model.FinancialInfo.Company</td>
                                        </tr>
                                        <tr>
                                            <th>Początek finansowania</th>
