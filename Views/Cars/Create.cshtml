@model CarCreateViewModel

@{ 
    ViewBag.Title = "Dodaj samochód";
}

    <form enctype="multipart/form-data" asp-controller="cars" asp-action="create" method="post">

        <div class="form-group row">
            <label asp-for="RegistrationNumber"></label>
            <input asp-for="RegistrationNumber" class="form-control" placeholder="Nr rej." />
            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Make"></label>
            <input asp-for="Make" class="form-control" placeholder="Marka" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" placeholder="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ProductionYear"></label>
            <input asp-for="ProductionYear" class="form-control" placeholder="Rok produkcji" min="2015"/>
            <span asp-validation-for="ProductionYear" class="text-danger"></span>
        </div>
        <div class="form-group-row">
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    </form>