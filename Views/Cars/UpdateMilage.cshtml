@model CarUpdateMilageViewModel
<div class="container">
    <h3>Aktualizacja przebiegu dla: @Model.CarReg</h3>
    <form enctype="multipart/form-data" method="post" asp-action="UpdateMilage" asp-controller="Cars">
        <input hidden asp-for="CarId" value="@Model.CarId" />
        <div class="form-group row">
            <label asp-for="Milage" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Milage" class="form-control" placeholder="Nowy przebieg" />
                <span asp-validation-for="Milage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Date" class="form-control" placeholder="data" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class=" form-group">
            <button type="submit" class="btn btn-primary">Aktualizuj przebieg</button>
        </div>
    </form>
</div>