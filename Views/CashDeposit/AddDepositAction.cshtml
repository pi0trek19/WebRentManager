@model CashDepositAddActionViewModel
<br/>

<form method="post" asp-action="AddDepositAction" asp-controller="CashDeposit" enctype="multipart/form-data">
    <input hidden asp-for="DepositId" value="@Model.DepositId" />
    <input hidden asp-for="CurrentAmount" value="@Model.CurrentAmount" />
    <div class="form-group row">
        <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Amount" class="form-control" placeholder="Opis" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group-row">
        <div class="col-sm-10">
            <label class="form-check-label">
                <input id="paymentUnchecked" asp-for="isPayment" value="@false" type="radio" />Przychód
            </label>
            <label class="form-check-label">
                <input type="radio" id="paymentChecked" asp-for="isPayment" value="@true" checked />Rozchód
            </label>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Opis" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="InvoiceNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="InvoiceNo" class="form-control" id="invoiceno" placeholder="Numer dokumentu" />
            <span asp-validation-for="InvoiceNo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group-row">
        <label asp-for="ActionDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="date" value="null" asp-for="ActionDate" class="form-control" />
            <span asp-validation-for="ActionDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group-row">
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </div>
</form>

<script>
        $(document).ready(function () {
            $("#paymentUnchecked").click(function () {
                $("#invoiceno").prop("disabled", true);
            });
            $("#paymentChecked").click(function () {
                $('#invoiceno').removeAttr('disabled');
            });
            
        });
</script>
