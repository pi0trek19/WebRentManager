@model AddServiceViewModel

    <div class="container">
            <h2>Dodaj przegląd dla: @Model.Car.RegistrationNumber</h2>
            <form enctype="multipart/form-data" asp-controller="services" asp-action="addservice" method="post">
                <input hidden asp-for="CarId" value="@Model.Car.Id" />
                <div class="form-group row">
                    <label asp-for="ServiceType" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="ServiceType" asp-items="Html.GetEnumSelectList<ServiceType>()" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Milage" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Milage" class="form-control" placeholder="Przebieg" />
                        <span asp-validation-for="Milage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ServiceFacility" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select asp-for="ServiceFacilityId" class="custom-select mr-sm-2"
                                asp-items="@(new SelectList(Model.ServiceFacilities,"Id","Name"))"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Cost" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group-row">
                    <label asp-for="Invoice" class="col-sm-2 col-form-label "></label>
                    <div class="col-sm-10">
                        <input asp-for="Invoice" type="file" class="form-control-file" />
                    </div>
                </div>
                <div class="form-group-row">
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                </div>

            </form>
    </div>
