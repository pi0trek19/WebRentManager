@model  MailMessageCreateViewModel
<br />
<h2>Dodaj nowy szablon wiadomości</h2>
<br />
<form enctype="multipart/form-data" asp-action="create" asp-controller="mailmessages" method="post">
    <div class="form-group row">
        <label asp-for="Desc" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Desc" class="form-control" placeholder="Opis" />
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Subject" class="form-control" placeholder="Temat wiadomości" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Content" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Content" rows="12" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Dodaj</button>
</form>
