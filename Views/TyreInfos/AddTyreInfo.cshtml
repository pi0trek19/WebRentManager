@model WebRentManager.ViewModels.TyreInfoAddViewModel
@using WebRentManager.Models;

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="AddTyreInfo" asp-controller="TyreInfos">
            <input hidden asp-for="CarId" value="@Model.CarId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="TyreStatus" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="TyreStatus" asp-items="Html.GetEnumSelectList<TyreStatus>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TyreName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TyreName" class="form-control" placeholder="Nazwa" />
                    <span asp-validation-for="TyreName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TyreType" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="TyreType" asp-items="Html.GetEnumSelectList<TyreType>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Width" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Width" class="form-control" placeholder="Szerokość" />
                    <span asp-validation-for="Width" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Profile" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Profile" class="form-control" placeholder="Profil" />
                    <span asp-validation-for="Profile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Diameter" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Diameter" class="form-control" placeholder="Średnica" />
                    <span asp-validation-for="Diameter" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="SpeedIndex" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="SpeedIndex" class="form-control" placeholder="Indeks prędkości" />
                    <span asp-validation-for="SpeedIndex" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Dot" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Dot" class="form-control" placeholder="Data produkcji" />
                    <span asp-validation-for="Dot" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <h4 class="text-danger">W przypadku wyboru opon na samochodzie serwis nie ma znaczenia</h4>
                <label asp-for="TyreShopId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="TyreShopId" class="custom-select mr-sm-2"
                            asp-items="@(new SelectList(Model.TyreShops,"Id","Name"))"></select>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Dodaj opony</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="details" asp-controller="cars" asp-route-guid="@Model.CarId" class="btn btn-danger">Anuluj</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
