@model AddObjectFileViewModel

<h3> Dodaj plik:</h3>

<form asp-action="AddFile" asp-controller="@Model.Controller" method="post" enctype="multipart/form-data">
    <input hidden asp-for="Id" value="@Model.Id" />
    <input hidden asp-for="Action" value="@Model.Action" />
    <input hidden asp-for="Controller" value="@Model.Controller" />
    <div class=" form-group row">
        <label class="col-sm-2 col-form-label">Dodaj plik</label>
        <div class="col-sm-10">
            <input asp-for="FormFile" type="file" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FileType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @*<select asp-for="FileType" asp-items="@Html.GetEnumSelectList<FileType>()"></select>*@
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Dodaj opis (opcjonalne)" />
        </div>
    </div>
    <button type="submit">Dodaj</button>
</form>
